{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  },
  "files": {
    "ignore": [
      ".vscode-test",
      "dist/**",
      "out/**",
      "src/providerRuntime/index.ts",
      "*.json"
    ]
  }
}
