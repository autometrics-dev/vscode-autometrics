{
  "icon": "images/logo.png",
  "name": "autometrics",
  "author": "Fiberplane",
  "publisher": "fiberplane",
  "displayName": "Autometrics",
  "license": "MIT",
  "description": "Show enhanced autometrics information from your code",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/autometrics-dev/vscode-autometrics"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "@autometrics/typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "configuration": [
      {
        "id": "General",
        "title": "Autometrics",
        "order": 1,
        "properties": {
          "autometrics.prometheusUrl": {
            "type": "string",
            "title": "Prometheus URL",
            "description": "Enter the base URL for your prometheus instance, this URL is used to generate links for queries",
            "default": "http://localhost:9090"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autometrics",
          "title": "Autometrics",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "autometrics": [
        {
          "id": "functionList",
          "name": "Functions"
        },
        {
          "id": "metricList",
          "name": "Metrics"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile --sourcemap --watch",
    "package": "npm run compile --minify",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "rome ci .",
    "lint-code": "rome check .",
    "fmt-check": "rome format .",
    "format": "rome format --write .",
    "test": "node ./out/test/run-test.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.23",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "@vscode/vsce": "^2.18.0",
    "esbuild": "^0.17.14",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "rome": "^12.0.0"
  },
  "dependencies": {
    "@autometrics/typescript-plugin": "^0.3.0",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "byte-base64": "^1.1.0",
    "node-fetch": "^3.3.1",
    "typescript": "^4.9.5"
  },
  "packageManager": "npm@9.6.2"
}
